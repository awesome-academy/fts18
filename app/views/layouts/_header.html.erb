<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".framgia_training"), root_path, id: "logo" %>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav">
        <li><%= link_to t(".course"), "#" %></li>
        <li><%= link_to t(".subject"), "#" %></li>
        <% if user_signed_in? %>
          <li><%= link_to t(".users"), "#" %></li>
        <% end %>
      </ul>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t(".account") %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t(".profile"), "#" %></li>
                <li><%= link_to t(".setting"), edit_user_registration_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t(".logout"), destroy_user_session_path, method: :delete %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t(".login"), new_user_session_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
